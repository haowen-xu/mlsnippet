[report]
# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code:
    if self\.debug

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run:
    if 0:
    if __name__ == .__main__.:


[run]
omit =
    # test code need not coverage statistics
    tests/*

    # exclude the JavaScript sub-project
    mltoolkit/report/frontend/*

    # exclude the demonstration report
    mltoolkit/report/demo.py

    # exclude the imported utilities
    mltoolkit/utils/imported.py
